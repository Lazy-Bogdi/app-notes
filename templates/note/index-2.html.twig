{% extends 'base.html.twig' %}

{% block title %}Note index{% endblock %}

{% block body %}



<div class="container mx-auto px-4 mt-20 mb-20">
        <h2 class="text-3xl  font-bold uppercase mb-5   sm:text-3xl">Mon profil :  </h2>
        <p>Nom : {{pagination[0].owner.name}}</p>
          <p>Email : {{pagination[0].owner.email}}</p>
<p>Créer le : {{pagination[0].owner.createdAt ? pagination[0].owner.createdAt|date('d F Y') : '' }}</p>


        <h2 class="text-3xl font-bold uppercase mt-5 mb-3   sm:text-3xl">Mes posts :  </h2>
    <div class="  mt-3">
    <a class=" inline-block rounded bg-indigo-600 px-6 py-3 text-sm font-medium text-white transition hover:bg-indigo-700 focus:outline-none focus:ring focus:ring-pink-300" href="{{ path('app_note_new')}}">Créer un post</a>
</div>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-10">
    {% for note in pagination %}
      <article class="rounded-lg border border-gray-100 bg-white p-4 shadow-sm transition hover:shadow-lg">
        <a href="#">
          <h2 class="mt-0.5 text-lg font-medium text-gray-900">
            {{ note.title }}
          </h3>
        </a>

        <p class="mt-4 mb-4 line-clamp-3 text-sm text-gray-500 mt-5 mb-5">
          {{ note.content|slice(0, 20) }}{% if note.content|length > 20 %}...{% endif %}
        </p>
<div class="flex justify-between items-center mt-2 space-x-4">
    <p class="line-clamp-3 text-sm text-indigo-500">
        {{ note.createdAt ? note.createdAt|date('d F Y') : '' }}
    </p>
    <p class="flex items-center text-sm text-indigo-500">
        Par : {{ note.owner.name }}
        <img src="{{ note.owner.profilePictureUrl }}" class="ml-2" style="height: 1em;"/>
    </p>
</div>
        {# <a href="{{ path('app_note_show', {'id': note.id}) }}" class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-indigo-600">
         En savoir plus
          <span aria-hidden="true" class="block transition-all group-hover:ms-0.5 rtl:rotate-180">
            &rarr;
          </span>
        </a> #}
      <div class="flex justify-center items-center space-x-2 mb-1 mt-6">
    <a class="inline-block rounded bg-indigo-300 px-6 py-3 text-sm font-medium text-white transition hover:bg-indigo-700 focus:outline-none focus:ring focus:ring-pink-300" href="{{ path('app_note_edit', {'id': note.id}) }}">
        Modifier
    </a>
    {{ include('note/_delete_form.html.twig') }}
</div>

      </article>
    {% else %}
      <p>Pas de post en ligne.</p>
    {% endfor %}
    </div>
    <div class="text-center custom-pagination mt-8">
        {{ knp_pagination_render(pagination) }}
    </div>
  </div>
 

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Note index{% endblock %}

{% block body %}



<div class="container mx-auto px-4 mt-20 mb-20">
        <h2 class="text-3xl text-center font-bold uppercase mb-5   sm:text-3xl">Vos posts  </h2>
        <p>{{notes[0].owner.name}}</p>
          <p>{{notes[0].owner.email}}</p>
                    <div class=" text-center  mt-3">
    <a class=" inline-block rounded bg-indigo-600 px-6 py-3 text-sm font-medium text-white transition hover:bg-indigo-700 focus:outline-none focus:ring focus:ring-yellow-400" href="{{ path('app_note_new')}}">Cr√©er un post</a>
</div>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-10">
    {% for note in notes %}
      <article class="rounded-lg border border-gray-100 bg-white p-4 shadow-sm transition hover:shadow-lg">
        <span class="inline-block rounded bg-blue-600 p-2 text-white">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M12 14l9-5-9-5-9 5 9 5z" />
            <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" />
          </svg>
        </span>
        <a href="#">
          <h3 class="mt-0.5 text-lg font-medium text-gray-900">
            {{ note.title }}
          </h3>
        </a>
        <p class="mt-2 line-clamp-3 text-sm text-gray-500 mt-5 mb-5">
          {{ note.content|slice(0, 20) }}{% if note.content|length > 20 %}...{% endif %}
        </p>
         <p class="mt-2 line-clamp-3 text-sm text-indigo-500">
         {{ note.createdAt ? note.createdAt|date('d F Y') : '' }}
        </p>
        {# <a href="{{ path('app_note_show', {'id': note.id}) }}" class="group mt-4 inline-flex items-center gap-1 text-sm font-medium text-indigo-600">
         En savoir plus
          <span aria-hidden="true" class="block transition-all group-hover:ms-0.5 rtl:rotate-180">
            &rarr;
          </span>
        </a> #}
      <div class="flex justify-center items-center space-x-2 mb-1 mt-6">
    <a class="inline-block rounded bg-indigo-300 px-6 py-3 text-sm font-medium text-white transition hover:bg-indigo-700 focus:outline-none focus:ring focus:ring-yellow-400" href="{{ path('app_note_edit', {'id': note.id}) }}">
        Modifier
    </a>
    {{ include('note/_delete_form.html.twig') }}
</div>

      </article>
    {% else %}
      <p>Pas de post en ligne.</p>
    {% endfor %}
    </div>
  </div>
 

{% endblock %}
